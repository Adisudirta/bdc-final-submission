generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db/dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String
  email     String   @unique
  password  String
  trashes   Trash[]
}

model Trash {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  qty       Int
  category  String
  desc      String
  price     String
  img       String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}
