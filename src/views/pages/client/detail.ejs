<!DOCTYPE html>
<html>
  <head>
    <%- include('../head') %>
  </head>
  <body>
    <%- include('../../components/header') %>

    <div
      class="container items-center justify-center flex gap-[150px] mx-auto py-9"
    >
      <div
        class="flex-shrink-0 w-[500px] relative mb-12 flex flex-col overflow-hidden rounded-xl bg-white bg-clip-border text-gray-700 shadow-md"
      >
        <img
          alt="<%=trash.title%>"
          class="h-[32rem] w-full object-cover object-center"
          src="/<%=trash.img%>"
        />
      </div>

      <div class="w-[500px]">
        <div
          class="bg-green-400 inline-block text-white py-[2px] px-[10px] rounded-lg mb-3"
        >
          <%=trash.category%>
        </div>
        <h2
          class="mb-5 block font-sans text-4xl font-semibold leading-[1.3] tracking-normal text-blue-gray-900 antialiased"
        >
          <%=trash.title%>
        </h2>
        <span class="block text-[14px] text-gray-600 font-bold mb-[5px]">
          Post By:
        </span>
        <p
          class="block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased mb-[10px]"
        >
          <%=trash.user.username%>
        </p>
        <span class="block text-[14px] text-gray-600 font-bold mb-[5px]">
          Price:
        </span>
        <p
          class="block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased mb-[10px]"
        >
          Mulai dari IDR <%=trash.price%>
        </p>
        <span class="block text-[14px] text-gray-600 font-bold mb-[5px]">
          Quantity:
        </span>
        <p
          class="block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased mb-[10px]"
        >
          <%=trash.qty%> Killogram
        </p>
        <span class="block text-[14px] text-gray-600 font-bold mb-[5px]">
          Description:
        </span>
        <p
          class="block font-sans text-base font-normal leading-relaxed text-gray-700 antialiased mb-[10px]"
        >
          <%=trash.desc%>
        </p>
      </div>
    </div>

    <%- include('../../components/footer') %>
  </body>
</html>
