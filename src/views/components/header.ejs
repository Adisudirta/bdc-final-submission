<header
  class="backdrop-blur-2xl backdrop-saturate-200 bg-opacity-80 bg-white block border border-white/80 container h-max inset-0 max-w-full px-4 py-2 rounded-none shadow-md sticky text-white w-full z-10 lg:px-8 lg:py-4"
>
  <div class="container flex items-center mx-auto text-gray-900">
    <a
      href="#"
      class="flex gap-2 items-center mr-4 cursor-pointer py-1.5 font-sans text-base font-medium leading-relaxed text-inherit antialiased"
    >
      <img width="50" src="/trash-cash-logo.png" alt="Trash Cash Logo" />
      <h1 class="text-[20px]">Trash Cash</h1>
    </a>

    <ul class="ml-auto mr-8 hidden items-center gap-6 lg:flex">
      <li
        class="block p-1 font-sans text-sm font-normal leading-normal text-inherit antialiased"
      >
        <a class="flex items-center" href="/"> Home </a>
      </li>
      <li
        class="block p-1 font-sans text-sm font-normal leading-normal text-inherit antialiased"
      >
        <a class="flex items-center" href="/about"> About </a>
      </li>
    </ul>

    <a href="/login">
